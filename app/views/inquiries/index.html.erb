<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<h1>Listing Frequently asked Question:</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inquiries.each do |inquiry| %>
      <tr>
        <td><%= inquiry.question %></td>
        <td><%= link_to 'Show Answer', inquiry_path(inquiry) %></td>
        <% if session[:user_id] %>
          <td><%= link_to 'Edit', edit_inquiry_path(inquiry) %></td>
          <td><%= link_to 'Destroy', inquiry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Question', new_inquiry_path %>
